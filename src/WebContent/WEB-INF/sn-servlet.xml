<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- components of the social networks connection service -->
    <bean id="google" class="mat.sn.Google"/> <!-- class for books application model -->

    <!-- Burlap Service Exporter -->
    <bean id="burlapGoogleService" class="org.springframework.remoting.caucho.HessianServiceExporter">
        <property  name="service" ref="google"/> <!-- reference to the service -->
        <property name="serviceInterface" value="mat.sn.IFesBes2"/> <!-- interface of the service -->
    </bean>

    <!-- mapping to the application service -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings" value="/sn.service=burlapGoogleService"/>
    </bean>

</beans>